<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title>헬멧 대여 결제</title>
  <script src="https://js.tosspayments.com/v1/payment-widget"></script>
</head>
<body>
  <h2>헬멧 대여 결제 테스트</h2>
  <button id="pay-button">결제하기</button>

  <script>
    // 🟢 여기 clientKey는 토스 개발자센터에서 발급받은 테스트 키로 바꿔주세요
    const clientKey = "test_ck_XXXXXX";  
    const customerKey = "customer_1234"; // 사용자를 구분할 임의 값

    const paymentWidget = PaymentWidget(clientKey, customerKey);

    document.getElementById("pay-button").addEventListener("click", () => {
      paymentWidget.requestPayment({
        orderId: "order_" + new Date().getTime(), // 임의 주문번호
        orderName: "헬멧 대여",
        amount: 1000, // 테스트 금액
        successUrl: window.location.origin + "/success.html", 
        failUrl: window.location.origin + "/fail.html"
      });
    });
  </script>
</body>
</html>
